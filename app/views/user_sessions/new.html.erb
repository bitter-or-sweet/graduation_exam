<% content_for(:title, t('.title')) %>
<div class="mx-auto w-5/6 max-w-screen-sm">
  <h1 class="text-lg sm:text-2xl font-bold my-10 sm:my-20 text-center"><%= t('.title') %></h1>
  <div class="flex flex-wrap justify-center pb-5 sm:pb-10 border-b mb-5">
    <%= link_to auth_at_provider_path(provider: :google), class: "w-full sm:w-2/5 btn bg-gray-200 rounded-full px-8 mb-5 sm:mb-0 shadow-lg" do %>
      <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="100" viewBox="0 0 48 48" class="w-6 h-6"><path fill="#fbc02d" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12	s5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24s8.955,20,20,20	s20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z"></path><path fill="#e53935" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039	l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z"></path><path fill="#4caf50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36	c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z"></path><path fill="#1565c0" d="M43.611,20.083L43.595,20L42,20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571	c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.35,43.611,20.083z"></path></svg>Googleでログイン
    <% end %>
    <%= link_to auth_at_provider_path(provider: :line), class: "w-full sm:w-2/5 btn bg-gray-200 flex items-center px-8 py-1 sm:ml-5 rounded-full text-sm text-[#00B900] shadow-lg" do %>
      <i class="fa-brands fa-line text-2xl mr-1"></i> LINEでログイン
    <% end %>
  </div>
  <h1 class="text-sm text-center font-bold mb-5"><i class="fa-regular fa-envelope fa-lg mr-1"></i>emailでログイン</h1>
  <%= form_with url: login_path, method: :post do |f| %>
    <div class="mb-5">
      <%= f.label :email %>
      <%= f.text_field :email, class: 'input border-gray-400 w-full' %>
    </div>
    <div class="mb-5">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'input border-gray-400 w-full' %>
    </div>
    <div class="flex items-center mb-5">
      <%= check_box_tag :remember_me, params[:remember_me], true, class: "toggle" %>
      <span class="pl-5">ログイン情報を記憶する</span>
    </div>
    <div class="mb-5">
      <%= link_to t('.password_forget'), new_password_reset_path, class: 'underline hover:text-yellow-400' %>
    </div>
    <div class="mb-5">
      初めてご利用ですか？<%= link_to '新規登録はこちら', new_user_path, class: 'underline hover:text-yellow-400 ml-2' %>
    </div>
    <div class="sm-text-lg font-semibold text-center">
      <%= f.submit t('.title'), class: 'bg-point hover:bg-yellow-400 shadow-xl my-10 rounded-full w-1/3 py-3' %>
    </div>
  <% end %>
</div>