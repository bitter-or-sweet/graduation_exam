<%= turbo_frame_tag dom_id(notification) do %>
  <li data-notification-id="<%= notification.id %>" class="<%= notification.unread ? 'unread' : '' %> mt-2">
    <%= link_to notification_path(notification),
    method: :patch,
    data: { turbo_method: :patch } do %>
                <i class="fa-regular fa-square-check fa-lg hover:text-yellow-400 mr-2"></i>
              <% end %>
    <%= generate_notification_message(notification)%>
    <span class="notification-time text-xs ml-3"><%= time_ago_in_words(notification.created_at) %>前</span>
  </li>
<% end %>