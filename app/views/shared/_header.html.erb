<header class="bg-theme bg-opacity-50">
  <div class="container mx-auto flex justify-between items-center px-5 py-5 w-full">
    <%= link_to '酒菜ネット', root_path, class:"text-3xl font-bold" %>
    <div class="space-x-14 items-center text-lg font-bold flex">
      <%= link_to t('header.post_index'), posts_path %>
      <%= link_to t('header.create_post'), new_post_path %>
      <%= link_to t('header.ai_combination'), '#' %>
      <div class="dropdown dropdown-hover">
        <%= image_tag 'default.jpg', class:"rounded-[10px] w-10 h-10" %>
        <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
          <li><%= link_to t('header.my_page'), '#' %></li>
          <li><%= link_to t('header.logout'), logout_path, data: { turbo_method: :delete } %></li>
        </ul>
      </div>
    </div>
  </div>
</header>