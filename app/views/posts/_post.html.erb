<div class="w-full lg:w-1/3 md:w-1/2 p-4">
  <div class="border bg-amber-50 shadow-xl rounded-lg p-4">
    <div class="flex flex-row justify-between">
      <div class="flex flex-row items-center">
        <%= user_avatar(post.user) %>
        <%= link_to post.user.name, post.user == current_user ? profile_path : user_path(post.user), class: 'hover:text-yellow-400' %>
      </div>
      <%= l post.created_at, format: :long %>
    </div>
    <div class="flex items-center justify-center w-full">
      <%= display_post_image(post) %>
    </div>
    <div class="flex justify-between">
      <div class="space-y-2">
        <%= link_to post.title, post_path(post), class: 'font-bold hover:text-yellow-400' %>
        <p class="font-bold mr-1">お酒 <i class="fa-solid fa-wine-glass"></i>：<%= post.alcohol %></p>
        <p class="font-bold mr-1">おつまみ <i class="fa-solid fa-utensils"></i>：<%= post.appetizer %></p>
        <div class="flex flex-row">
          <div class="border border-gray-500 bg-white rounded-[10px] text-gray-500 px-2 mr-1">
            <%= post.alcohol_genre.genre %>
          </div>
          <div class="border border-gray-500 bg-white rounded-[10px] text-gray-500 px-2">
            <%= post.appetizer_genre.genre %>
          </div>
        </div>
      </div>
      <div class="flex flex-col-reverse">
        <%= display_like_button(current_user, post) %>
      </div>
    </div>
  </div>
</div>