<% content_for(:title, t('.title')) %>
<div class="mx-auto w-5/6 max-w-screen-sm">
  <h1 class="text-lg sm:text-2xl font-bold my-20 text-center"><%= t('.title') %></h1>
  <div class="flex justify-center pb-10 border-b mb-10">
    <%= link_to auth_at_provider_path(provider: :google), class: "btn bg-gray-200 rounded-full px-8" do %>
      <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="100" viewBox="0 0 48 48" class="w-6 h-6"><path fill="#fbc02d" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12	s5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24s8.955,20,20,20	s20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z"></path><path fill="#e53935" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039	l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z"></path><path fill="#4caf50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36	c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z"></path><path fill="#1565c0" d="M43.611,20.083L43.595,20L42,20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571	c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.35,43.611,20.083z"></path></svg>Googleで登録
    <% end %>
  </div>
  <%= form_with model: @user do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="mb-5">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'input border-gray-400 w-full' %>
    </div>
    <div class="mb-5">
      <%= f.label :email %>
      <%= f.text_field :email, class: 'input border-gray-400 w-full' %>
    </div>
    <div class="mb-5">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'input border-gray-400 w-full' %>
    </div>
    <div class="mb-5">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'input border-gray-400 w-full' %>
    </div>
    <div class="flex flex-col sm:flex-row">
      <div class="w-full md:w-1/2 mb-5">
        <%= f.label :avatar %>
        <%= f.file_field :avatar, class: 'file-input file-input-bordered w-full max-w-xs', id: 'input' %>
        <%= f.hidden_field :avatar_cache %>
      </div>
      <div class="flex sm:justify-end w-full md:w-1/2">
        <%= image_tag @user.avatar.url, id: 'preview', size: '200x100' %>
      </div>
    </div>
    <div class="sm-text-lg font-semibold text-center">
      <%= f.submit t('header.sign_up'), class: 'bg-point hover:bg-yellow-400 shadow-xl my-10 rounded-full w-1/3 py-3' %>
    </div>
  <% end %>
</div>